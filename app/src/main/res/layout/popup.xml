<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/cong">

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/jump"
        android:id="@+id/jump"
        android:layout_width="150dp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/jump"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row1" >

            <TextView
                android:text="New high score:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level"
                tools:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:textStyle="bold"
                android:textStyle="normal|bold"
                android:visibility="invisible" />

            <TextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                tools:textStyle="bold"
                android:textStyle="normal|bold"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row2" >

            <TextView
                android:text="Enter your name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/easy"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:visibility="invisible" />

            <EditText
                android:inputType="textPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:hint="Name"
                android:textSize="24sp"
                android:maxLength="10"
                android:textStyle="normal|bold"
                android:visibility="invisible"
                android:textColorLink="@android:color/holo_orange_light"
                android:textCursorDrawable="@android:color/holo_orange_light"
                android:textColorHint="@android:color/holo_orange_light"
                android:textColorHighlight="@android:color/holo_orange_light"
                android:scrollbarThumbHorizontal="@android:color/holo_orange_light"
                android:scrollbarThumbVertical="@android:color/holo_orange_light" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row3" >

            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
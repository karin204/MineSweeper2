<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karin.minesweeper.UI.StartPageActivity">

    <RelativeLayout
        android:id="@+id/startPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/startscreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnEasy"
            android:layout_height="80dp"
            android:background="@drawable/easy"
            android:layout_width="80dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="148dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnMedium"
            android:layout_height="80dp"
            android:background="@drawable/medium"
            android:layout_width="80dp"
            android:layout_marginTop="58dp"
            android:layout_alignTop="@+id/btnEasy"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnHard"
            android:layout_height="80dp"
            android:background="@drawable/hard"
            android:layout_width="80dp"
            android:layout_below="@+id/btnMedium"
            android:layout_toRightOf="@+id/btnMedium"
            android:layout_toEndOf="@+id/btnMedium"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />
    </RelativeLayout>
</RelativeLayout>
